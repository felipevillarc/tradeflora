<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <i class="fas fa-seedling"></i><span> TRADEFLORA<sup>beta</sup></span>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Página Principal", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mensagens", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://images-na.ssl-images-amazon.com/images/I/813NvJJYsML.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Meu Perfil", "#", class: "dropdown-item" %>
            <%= link_to "Minhas Áreas", "#", class: "dropdown-item" %>
            <%= link_to "Configurações", "#", class: "dropdown-item" %>
            <%= link_to "Sair", destroy_user_session_path, method: "delete", class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  <% else %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Entrar", "/users/sign_in", class: "nav-link btn btn-success mx-2 py-1 button-light-shadow" %>
        </li>
        <li class="nav-item">
          <%= link_to "Cadastre-se", "/users/sign_up", class: "nav-link btn btn-warning py-1 button-light-shadow" %>
        </li>
      </ul>
    </div>
  <% end %>

</div>

