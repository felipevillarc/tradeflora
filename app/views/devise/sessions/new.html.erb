<h2>Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label:"Email",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: "Senha",
                required: false,
                input_html: { autocomplete: "senha" } %>
    <%= f.input :remember_me, as: :boolean, label: "Lembrar dos meus dados" if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", class: "btn btn-success button-light-shadow mb-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
