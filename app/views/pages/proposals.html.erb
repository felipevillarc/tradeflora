<div class="container">


  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Áreas de Interesse</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Area</th>
            <th>Bacia</th>
            <th>Interessado</th>
            <th>Email</th>
            <th>Telefone</th>
          </thead>
         <% @my_proposals.each do |proposals| %>
         <% user = proposals.user %>
         <% area = proposals.area %>
            <tr>
              <td><%= area.description %></td>
              <td><%= area.basin.name %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <br>
    <p> <%= link_to 'Ver todas as áreas', areas_path %> </p>
  <br>
    <p> <%= link_to 'Voltar ao início', root_path %> </p>
  <br>
</div>