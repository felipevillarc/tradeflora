
<div class="container">
  <h1><%= "Nova área Disponibilizada por #{@area.user.name}"%></h1>
  
  <br>

  
  
  <div class="border" id="map" style="height: 300px"></div>

  <br>


  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Área</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Description (m²)</th>
            <th>Basin</th>
            <th>Action</th>
          </thead>
         
            <tr>
              <td><%= @area.description %></td>
              <td><%= @area.basin.name %></td>
              <td><%= link_to @area, method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_area"></i>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "areas/form", user: @user, area: @area %>
    </div>
     <%= link_to "Estou interessado", new_area_trade_path(@area) %>
  </div>

</div>

<!-- criar o campo de status na área para só deixar disponível para escolha as áreas que não tenham trade em andamento" --Unless @area.status true -->