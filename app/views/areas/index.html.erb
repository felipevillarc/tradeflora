
<h1 id="paddedheader">Áreas cadastradas</h1>
<div class="main-container">
  <div class="cards">
    <% @areas.each do |area| %>
      <div class="card" style="width: 19rem;">
        <img src="assets/<%=area.basin.name%>.jpg" class="card-img-top">
        <div class="card-body">
          <h4 class="card-title"><%= area.description %></h4>
          <h5><span>Área de: </span><%= area.user.name %></h5>
          <p><span>Bacia: </span><%= area.basin.name %></p>
          <p><i class="fas fa-globe-americas"></i> Coordenadas</p>
            <ul>
              <li>
                Latitude: <%= area.lat.round(6) %>
              </li>
              <li>
                Longitude: <%= area.long.round(6) %>
              </li>
            </ul>
          <div>
            <p><%= link_to "Saiba mais", area_path(area), class: "btn btn-success button-light-shadow" %></p>
          </div>
          </div>

      </div>
    <% end %>
  </div>
</div>
